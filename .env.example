# 服务端口，默认 3000
PORT=3000

# 运行环境：development | production
NODE_ENV=development

# MongoDB 连接串（不填则默认 mongodb://127.0.0.1:27017/use_cursor）
# 本地：mongodb://127.0.0.1:27017/use_cursor
# Atlas：mongodb+srv://用户名:密码@cluster.xxxxx.mongodb.net/use_cursor
MONGODB_URI=

# JWT 配置（生产环境务必设置强随机值）
JWT_SECRET=
JWT_EXPIRES_IN=7d

# bcrypt rounds（越大越慢，10 是常见默认值）
BCRYPT_SALT_ROUNDS=10

# 晶石游戏每轮时长（秒）
ROUND_SECONDS=60

# 是否由后端托管前端构建产物（frontend/dist）
# 生产环境可设为 true，然后先执行：npm run build:frontend
SERVE_FRONTEND=false
